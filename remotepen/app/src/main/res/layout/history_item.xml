<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bubble">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/HistoryContentTextView"
            android:textSize="25sp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/HistoryTimeTextView"
            android:gravity="right"
            android:textSize="10sp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:id="@+id/isBookmakeImageView"
            android:layout_gravity="right|top"
            android:src="@drawable/paper_clip"/>

    <LinearLayout
        android:orientation="vertical"
        android:drawSelectorOnTop="true"
        android:id="@+id/selectorLayout"
        android:background="@drawable/hist_item_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|left|right|top" />

</FrameLayout>
